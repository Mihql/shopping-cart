<section>
    <div class="container">
        <div class="row mt-0">
            <a href="/admin/add-products" class="btn btn-primary ml-5">Add products</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>