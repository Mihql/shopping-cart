<section>
    <div class="container">
        <div class="row mt-0">
            <a href="/admin/add-products" class="btn btn-primary ml-5">Add products</a>
        </div>
        <table id="admin" class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class=" btn btn-danger"
                            onclick=" return confirm(are you sure {{this.name}})">delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#admin').DataTable();
    })
</script>