<section>
    <div class="container">

        <h2 class="text-center mb-4">Order History</h2>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Name</th>
                        <th>Payment Method</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.mail}}</td>
                        <td>{{this.deliveryDetails.phone}}</td>
                        <td>{{this.deliveryDetails.name}}</td>
                        <td>{{this.payment}}</td>
                        <td>{{this.totalAmount}}</td>
                        <td>{{this.status}}</td>
                        <td><a href="/ordered-view-products/{{this._id}}" class="btn btn-primary">View Products</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</section>