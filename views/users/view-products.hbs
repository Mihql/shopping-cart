<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}

            <div class="col-12 col-md-3 p-3">
                <div class="card" style="width: 18rem;">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.category}}</p>
                        <p class="card-text">{{this.price}}</p>
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary"> Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>

